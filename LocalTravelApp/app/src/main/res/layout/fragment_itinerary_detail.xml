<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.uw.lbaker7.localtravelapp.fragments.ItineraryDetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/itineraryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Itinerary"
            android:textSize="40sp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/shareItineraryButton"/>

        <Button
            android:id="@+id/shareItineraryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textSize="20sp"
            android:layout_toLeftOf="@+id/createMap"/>

        <Button
            android:id="@+id/createMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Map"
            android:textSize="20sp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


    <ListView
        android:id="@+id/placeItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
