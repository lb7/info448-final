<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    >

        <TextView
            android:id="@+id/itinerary_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/itinerary_date_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itinerary_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorAccent"
            />

        <ImageButton
            android:id="@+id/btn_delete_itinerary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@android:drawable/ic_delete"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/itinerary_shared_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/itinerary_date_created"
            android:layout_alignTop="@+id/itinerary_date_created"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/itinerary_date_created"
            android:layout_toRightOf="@+id/itinerary_date_created"/>


</RelativeLayout>