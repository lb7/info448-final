<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/placeList">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/img_place"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@android:drawable/star_off"
        />

    <TextView
        android:id="@+id/txt_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:text="place name"
        android:layout_toRightOf="@+id/img_place"
        />

    <TextView
        android:id="@+id/txt_place_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/txt_place_name"
        android:layout_alignLeft="@id/txt_place_name"
        android:textSize="15sp"
        android:text="Place Address"
        />

    <TextView
        android:id="@+id/txt_ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/txt_place_address"
        android:layout_alignLeft="@id/txt_place_name"
        android:text="rating"
        android:textSize="15sp"
        />

    <ImageButton
        android:id="@+id/btn_add_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_input_add"
        />



</RelativeLayout>